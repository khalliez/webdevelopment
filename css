/*Applies to All ELEMENTS	*/
	h1 {color: #2431C7; border-color: purple; border-width: 50px; border-style: solid;text-align: center }   /*from http://www.colorpicker.com/*/

	h2 {color: rgba(36,49,199,1); background: rgba(255,100,80,.2) ;}   /*red green blue transparency*/  /*from http://www.colorpicker.com/*/
	h3 {color: rgba(36,49,199,.6); border: 2px dashed red;}  /*transparency   .6*/
	h4 {color: rgba(36,49,199,.2); }  /*transparency     .2*/

	/*body { background: url(http://www.graphicsbeam.com/wp-content/uploads/2016/06/1.jpg); 
		  background-repeat: no-repeat;  /*removes tiles
		  background-size: cover ;   /*  covers the entire page
		  background-position: 50% 0%}    */  



	/*ID*/  /*Apply to one*/
	#special{background: yellow; border-bottom: 3px solid red; width: 30%;padding-bottom: 20px}


	/*CLASS*//*Apply to multiple*/
	.highlight {text-decoration: line-through;}





/*Descendant Selector*/
	li a {color: red;}  /* Selects everything in a list that has a a href  example is google facbook and reddit link */
	div p {font-size: 25px;} /*nested p's in a div*/


/*Adjacent Selector*/
	h5 + ul { border: 4px solid red;}  /*Selects and h5 header with ul*/

/*Attribute Selector*/
	a[href = "http://www.google.com" ] {background: rgba(36,49,199,.2) ;}   /*You can select any attribute. This case we target anythiing with googl link*/

	input[type="text"] {background: blue;}  /*  This makes all text field background blue*/

	input[type="checkbox"] {background: yellow;}  /*  This makes all text field background blue*/

	input:checked {margin-left: 50px;} /*this selects any checkboxes or radio buttons that are checked off. this case moves the boxes over*/
	label {text-transform: uppercase;}/* Make the <label> elements all UPPERCASE without changing the HTML*/
	#special:first-letter {color: green;font-size: 100px;} /*Make the first letter of the element with id 'special' green and 100px font size(font-size: 100)*/
	h6:hover {color:blue;} /*Make the <h1> element's color change to blue when hovered over */
	a:visited {color:gray;} /*Make the <a> element's that have been visited gray */




/*nth of type   SELECT certain number of certain type */
	li :nth-of-type(3) {background: orange;}   /*This made the 3rd item in a li the backgroud purple*/

	ol :nth-of-type(even) {background: red;}   /*This makes every even row of ol li background red*/
	div:nth-of-type(3) p {background: #F0AFDB;} /* Give both <p>'s inside the 3rd <div> a pink background*/
	div:nth-of-type(3) p :nth-of-type(2)  {border-color: white;border-width: 5px; border-style: solid}/* Give the 2nd <p> inside the 3rd <div> a 5px white border*/
	div:nth-of-type(3) em :nth-of-type(1)  {color: white;font-size: 20px;}/* Make the <em> in the 3rd <div> element white and 20px font(font-size:20px)*/


	div:nth-of-type(1) p {width: 50%; border: 2px solid blue; padding:10px;} /*when using percent border expands and shrinks with size of browser. Padding: space between words and border*/
	div:nth-of-type(1) p {width: 50%; border: 2px solid blue; padding-left:10px;} /*pads only left side*/
	div:nth-of-type(1) p {width: 50%; border: 2px solid blue; margin:10px;} /*space between objects like other pictures. margin-top you can do */
    div:nth-of-type(1) p {width: 50%; border: 2px solid blue; margin:10px 20px 30px 20px;} /*margin top bottom left right */
    div:nth-of-type(1) p {width: 50%; border: 2px solid blue; margin:10px auto 30px auto;} /*margin top bottom left right auto browser does for us */
/*FORMATing*/
	h1 {font-family: 'Tangerine', sans-serif;}  
	span {font-size: 2.0em; font-weight: 800;}    /* Double size of the font size of paragraph. em means element. Weight light to heavy 100 to 800 or you can use bold or normal*/
	p { line-height: 2; } /*height of space between lines*/
	p { text-align: center; } /*center*/
	p { text-decoration: underline; } /*underline*/

/*BOX MODEL*/
	/*Tic Tac Toe*/

	.tic {background: yellow;width:100px;height:100px;margin: auto;}   /*auto is making it centered. browser does what it thinks is best*/
	.vertical {border-left: 1px solid black;border-right: 1px solid black  }
	.horizontal {border-top: 1px solid black;border-bottom: 1px solid black }


/*Images*/

img {width: 30%;margin:1.66%;float: left;} /*float removes white spaces the browser puts in. % makes the pic 30% relative to the body*/
#pics_title { margin-left: 1.66%; font-size: 50}
